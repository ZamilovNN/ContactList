@model IEnumerable<ContactList.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<h2>Контакты</h2>

<p>
    @Html.ActionLink("Создать контакт", "Create")
</p>

<form asp-controller="Contacts" asp-action="Index">
    <p>
        Поиск: <input type="text" name="SearchString">
        <input type="submit" value="Найти" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactInfomations)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                    @foreach (var info in item.ContactInfomations)
                    {
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName(info.InfoType.ToString())
                            </dt>

                            <dd>
                                @Html.DisplayName(info.InfoDescription.ToString())
                            </dd>
                        </dl>
                    }
            </td>
            <td>
                @Html.ActionLink("Карточка", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
