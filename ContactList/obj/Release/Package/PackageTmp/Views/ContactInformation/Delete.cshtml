@model ContactList.Models.ContactInformation

@{
    ViewBag.Title = "Удалить";
}

<h2>Удалить</h2>

<h3>Вы точно хотите удалить запись?</h3>
<div>
    <h4>@Model.InfoDescription - @Model.Contact.FullName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Contact.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contact.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InfoType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InfoType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InfoDescription)
        </dt>

